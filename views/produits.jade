extends layout
block titre
  h2 Produits

block content
  if utilisateur != undefined
    if utilisateur.role == "admin"
      p
        a(href="/utilisateur/creerProduit") Ajouter un produit

  for produit,i in tab_produits
    .produit
      .headerProduit
        h3 #{produit.nom}
      p
        img(src='#{produit.image}', alt='non disponible', height='80', width='80')
        ul
          li  Prix : &nbsp;
              b #{produit.prix} €
          li Catégorie : #{produit.categorie}
      p.p_desc Description : #{produit.description}
      p
        a(href="/produits/detail/"+produit.id) Voir détails
      if utilisateur != undefined
        if utilisateur.role == "admin"
          a(href="/produits/editerProduit/" + produit.id) Editer le produit
          br
          a(href="/produits/supprimerProduit/" + produit.id) Supprimer le produit